@import url('http://fonts.googleapis.com/css?family=Montserrat:400,700')

body
  background-color: black
  font-family: Montserrat,"Helvetica Neue",Helvetica,Arial,sans-serif;
  display: block
  margin: 0
  font-size: 14px
  width: 100%
  height: 100%

h1, h2, p
  color: white

.intro
  display: table
  width: 100%
  height: 70vh
  padding: 0
  text-align: center
  color: white
  background:
    url(../img/2941504858_92423577d0_b.jpg),no-repeat,bottom,center,scroll
  background-size: cover

  h1, h2
    text-transform: uppercase

.intro-body
  display: table-cell
  vertical-align: middle

.container
  max-width: 750px

.paragraph-underlay
  background-color: rgba(0,0,0,0.6)

.card-container
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  width: 100%;

.card
  border: 2px solid #333;
  border-radius: 4px;
  text-align: left;
  width: 30%;
  height: 0;
  padding-bottom: 19.8%;
  overflow: scroll;
  margin-bottom: 3%;

.large
  font-size: 20px
